{
  "name": "dev",
  "version": "3.0.1",
  "description": "VIPTV-工作室,组件开发,文档编辑",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production pnpm run  --stream -r build",
    "commit": "pnpm git-cz"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "useEmoji": true
    }
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "cz-git": "1.9.4"
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=20"
  }
}
