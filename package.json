{
  "name": "dev",
  "version": "3.0.0",
  "description": "VIPTV-工作室,组件开发,文档编辑",
  "private": true,
  "type": "module",  
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development pnpm run -r dev",
    "build": "cross-env NODE_ENV=production pnpm run --stream -r build",
    "commit": "pnpm git-cz",
    "clean": "pnpm run --stream -r clean",
    "check-update": "pnpm dlx npm-check-updates -u --deep --timeout 600000",
    "update": "pnpm up -r",
    "lint": "eslint . --ext .js,.ts",
    "lint-fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier **/*.{ts,js,json,yml,md} --check",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && pnpm run -r --stream changelog",
    "format-fix": "prettier **/*.{ts,js,json,yml,md} --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "useEmoji": true
    }
  },
  "nano-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.vue": "eslint --fix",
    "*.{cjs,mjs,js,ts}": [
      "eslint --fix"
    ],
    "*.md": "markdownlint-cli2 --fix",
    "*.scss": "stylet --fix",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "cross-spawn": "^7.0.3",
    "cz-git": "1.9.4",
    "husky": "9.1.4",
    "nano-staged": "0.8.0"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=20"
  }
}
