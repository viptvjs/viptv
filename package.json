{
  "name": "dev",
  "version": "3.0.1",
  "description": "VIPTV-工作室,组件开发,文档编辑",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production pnpm run --stream -r build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2 && pnpm run -r --stream changelog",
    "commit": "git-cz"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "commitizen": "^4.3.0",
    "cz-git": "1.9.4",
    "cross-env": "7.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=20"
  }
}